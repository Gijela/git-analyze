{
  "name": "github101",
  "version": "1.0.0",
  "description": "A tool for analyzing Git repositories ",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --format esm --watch",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "glob": "^11.0.0",
    "simple-git": "^3.27.0",
    "typescript": "^5.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "tsup": "^8.3.5"
  },
  "author": "Gijela",
  "keywords": [
    "git",
    "analysis",
    "ingest",
    "code review"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Gijela/github101.git"
  }
}
